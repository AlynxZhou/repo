# Maintainer: Tobias Bachmann <tobachmann@gmx.de>
pkgname=python-opengl-accelerate
pkgver=3.1.9
pkgrel=1
pkgdesc="This set of C (Cython) extensions provides acceleration of common operations for slow points in PyOpenGL 3.x."
_name=PyOpenGL-accelerate
arch=('any')
url="https://github.com/mcfletch/pyopengl"
license=('BSD')
groups=()
depends=('python' 'python-opengl' 'cython' 'python-numpy')
makedepends=(python-build python-installer python-wheel git python-setuptools)
options=(!emptydirs)
source=(git+https://github.com/mcfletch/pyopengl.git#tag=release-${pkgver})
sha256sums=('85957c7c76975818ff759ec9243f9dc7091ef6f373ea37a2eb50c320fd9a86f3')

function build() {
	cd "$srcdir/pyopengl/accelerate"
	python -m build --wheel --no-isolation
}

function package() {
	cd "$srcdir/pyopengl/accelerate"
	python -m installer --destdir="${pkgdir}" dist/*.whl
}