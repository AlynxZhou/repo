optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('3cbf42b680ccbf566b945fb704c1106a7038d09bb6860863cfc6e2d5bf3665273966d13a87b24135858e080d78fa893cfa14f16527d97df8c59e3a78ab1a6223')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

