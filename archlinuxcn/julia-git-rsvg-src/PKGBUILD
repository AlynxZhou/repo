pkgname=julia-git-rsvg-src
pkgver=1.1.0
_commit=0e77c9dbd1f83c078cea9aa5293aa4426601a26f
pkgrel=1
pkgdesc="Rsvg.jl"
url="https://github.com/JuliaGraphics/Rsvg.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/JuliaGraphics/Rsvg.jl.git#commit=$_commit")
